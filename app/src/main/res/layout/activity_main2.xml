<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liguanjia.myapplication.Main2Activity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/q88"
        android:orientation="horizontal">

        <Button
            android:onClick="bottomTabClick"
            android:textColor="@color/white"
            android:background="@drawable/btn_checked_backgourd"
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="home" />

        <Button
            android:onClick="bottomTabClick"
            android:id="@+id/btn_secend"
            android:textColor="@color/white"
            android:background="@drawable/btn_checked_backgourd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="secend" />

        <Button
            android:onClick="bottomTabClick"
            android:id="@+id/btn_third"
            android:textColor="@color/white"
            android:background="@drawable/btn_checked_backgourd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="third" />

        <Button
            android:onClick="bottomTabClick"
            android:id="@+id/btn_fourth"
            android:textColor="@color/white"
            android:background="@drawable/btn_checked_backgourd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="fourth" />

    </LinearLayout>


</LinearLayout>
